 <model>
    <mount>//OPNsense/icapeg</mount>
    <description>
        the OPNsense "ICAPeg" application
    </description>
    <items>
        <!-- container -->
        <general>
            <!-- fields -->
            <PortNum type="PortField">
                <default>  1344</default>
                <ValidationMessage>Error Port value</ValidationMessage>
                <Required>Y</Required>
            </PortNum>
            <LogLevel type="OptionField">
                <default>DEBUG,INFO,ERROR,FATAL</default>
                <multiple>Y</multiple>
                <Required>Y</Required>
                    <OptionValues>
                        <DEBUG>"Debug"</DEBUG>
                        <INFO>"Info"</INFO>
                        <ERROR>"Error"</ERROR>
                        <FATAL>"Fatal"</FATAL>
                    </OptionValues>
            </LogLevel>
            <WritingLogsToConsole type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </WritingLogsToConsole>
            <DebuggingHeaders type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </DebuggingHeaders>
         </general>
    </items>

</model>
